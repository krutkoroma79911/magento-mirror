<?xml version="1.0"?>

<config>
    <tabs>
        <tsgalert translate="label" module="tsg_productalert">
            <label>Tsg Alert</label>
            <sort_order>41</sort_order>
        </tsgalert>
    </tabs>
    <sections>
        <tsg_productalert translate="label" module="tsg_productalert">
            <class>separator-top</class>
            <label>Product Alert</label>
            <tab>tsgalert</tab>
            <sort_order>35</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <tsg_productgroup translate="label" module="tsg_productalert">
                    <label>Tsg Price Alert</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <tsg_pricealert translate="label">
                            <label>Show price alert in frontend</label>
                            <comment>Show price subscriptions in frontend</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </tsg_pricealert>
                        <tsg_stockalert translate="label">
                            <label>Show stock alert in frontend</label>
                            <comment>Show stock subscriptions in frontend</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </tsg_stockalert>
                        <tsg_email_price_template translate="label">
                            <label>Price Alert Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tsg_email_price_template>
                        <tsg_email_stock_template translate="label">
                            <label>Stock Alert Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tsg_email_stock_template>
                        <tsg_email_identity translate="label">
                            <label>Tsg Alert Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tsg_email_identity>
                    </fields>
                </tsg_productgroup>
                <tsg_productcrongroup translate="label" module="tsg_productalert">
                    <label>Tsg Cron Alert Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <time translate="label">
                            <label>Start Time</label>
                            <frontend_type>time</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </time>
                        <frequency translate="label">
                            <label>Frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cron_frequency</source_model>
                            <backend_model>tsg_productalert/adminhtml_product_alert_cron</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </frequency>
                    </fields>
                </tsg_productcrongroup>
            </groups>
        </tsg_productalert>
    </sections>
</config>